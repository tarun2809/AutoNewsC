# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_PATH=./data/autonews.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# External API Keys
GNEWS_API_KEY=your-gnews-api-key
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REFRESH_TOKEN=your-youtube-refresh-token

# Internal Service URLs
NLP_SERVICE_URL=http://localhost:8001
TTS_SERVICE_URL=http://localhost:8002
VIDEO_SERVICE_URL=http://localhost:8003

# Internal Service Authentication
INTERNAL_SERVICE_SECRET=your-internal-service-secret

# Cron Configuration
ENABLE_CRON=true
NEWS_FETCH_CRON=0 */2 * * *  # Every 2 hours
CLEANUP_CRON=0 0 * * *       # Daily at midnight

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# News Configuration
DEFAULT_NEWS_CATEGORY=general
DEFAULT_NEWS_LANGUAGE=en
DEFAULT_NEWS_COUNTRY=us
MAX_ARTICLES_PER_FETCH=10

# Video Configuration
DEFAULT_VIDEO_LENGTH=120      # seconds
DEFAULT_VOICE_ID=default
DEFAULT_VIDEO_THEME=modern

# Monitoring
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
METRICS_RETENTION_DAYS=30