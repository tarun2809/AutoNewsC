# Video Pipeline Service Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8003
RELOAD=false
LOG_LEVEL=info

# Authentication
INTERNAL_SERVICE_SECRET=your-internal-service-secret

# Storage Directories
OUTPUT_DIR=./video_output
CACHE_DIR=./cache
ASSETS_DIR=./assets
TEMPLATES_DIR=./templates

# Video Configuration
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=30
VIDEO_CODEC=libx264
AUDIO_CODEC=aac
MAX_VIDEO_LENGTH=300

# Theme Configuration
DEFAULT_THEME=modern
FONT_FAMILY=Arial-Bold

# Performance
ENABLE_GPU_ACCELERATION=false
MAX_CONCURRENT_RENDERS=2

# Quality Settings
VIDEO_BITRATE=2000k
AUDIO_BITRATE=128k
CRF=23

# Template Settings
ENABLE_KEN_BURNS=true
SUBTITLE_FADE_DURATION=0.5
TITLE_DISPLAY_DURATION=3

# Image Processing
MAX_IMAGES_PER_VIDEO=5
IMAGE_TRANSITION_DURATION=1.0
DEFAULT_IMAGE_DURATION=3.0

# Background Music
ENABLE_BACKGROUND_MUSIC=false
BACKGROUND_MUSIC_VOLUME=0.3

# Thumbnail Configuration
THUMBNAIL_WIDTH=1280
THUMBNAIL_HEIGHT=720
THUMBNAIL_QUALITY=90