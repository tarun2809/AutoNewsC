# AutoNews Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_PASSWORD=autonews123
DATABASE_URL=postgresql://autonews:autonews123@localhost:5432/autonews

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# External API Keys
GNEWS_API_KEY=your-gnews-api-key-here
YOUTUBE_API_KEY=your-youtube-api-key-here

# Internal Service Communication
INTERNAL_API_SECRET=your-internal-api-secret-here

# Service URLs (for production deployment)
SUMMARIZER_SERVICE_URL=http://localhost:8001
TTS_SERVICE_URL=http://localhost:8002
VIDEO_SERVICE_URL=http://localhost:8003

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Node Environment
NODE_ENV=development

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=development

# Model Cache Directories
MODEL_CACHE_DIR=./models
HUGGINGFACE_CACHE_DIR=./hf_cache
TEMP_DIR=./temp

# FFmpeg Path (adjust based on your system)
FFMPEG_PATH=/usr/bin/ffmpeg

# Deployment Secrets (for CI/CD)
# Railway
RAILWAY_TOKEN=

# Render
RENDER_API_KEY=
RENDER_TTS_SERVICE_ID=
RENDER_VIDEO_SERVICE_ID=

# Vercel
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Hugging Face
HF_USERNAME=
HF_TOKEN=